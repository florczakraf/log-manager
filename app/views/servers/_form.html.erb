<% if @server && @server.errors.any? %>
  <% @server.errors.full_messages.each do |message_error| %>
    <div class="alert alert-danger">
      <%= button_tag('x', {class: "close", data: { dismiss: 'alert' }}) %>
      <strong><%= message_error %></strong>
    </div>
  <% end %>
<% end %>

<%= form_for @server do |f| %>
  <p>Display name:<br /> <%= f.text_field :name %> </p>
  <p>IP:<br /> <%= f.text_field :ip %> </p>
  <p>Port:<br /> <%= f.text_field :port %></p>
  <%= f.submit class: "btn btn-default" %>
<% end %>